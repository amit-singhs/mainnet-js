{
  "test": "jest",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mainnet-cash/mainnet-js/"
  },
  "bugs": {
    "url": "https://github.com/mainnet-cash/mainnet-js/issues"
  },
  "name": "@mainnet-cash/root",
  "private": true,
  "workspaces": {
    "packages": [
      "./packages/*"
    ],
    "nohoist": [
      "**/ts-jest/**",
      "**/@types/jest/**",
      "**/demo/**",
      "**/jest-runner/**"
    ]
  },
  "version": "0.5.9",
  "homepage": "https://mainnet.cash",
  "scripts": {
    "api:validate": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli validate -i /local/swagger/v1/api.yml",
    "api:build:server": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli generate -i /local/swagger/v1/api.yml -g nodejs-express-server -o /local/packages/mainnet-cash",
    "api:build:client": "node swagger/generate.js",
    "api:serve:install": "yarn install --production=true --cwd packages/mainnet-cash/ --prefix packages/mainnet-cash/",
    "api:serve:test": "yarn workspace mainnet-cash run test",
    "api:serve:cluster": "yarn workspace mainnet-cash run start",
    "api:serve": "node --trace-warnings packages/mainnet-cash/serve.js",
    "bump": "node bump_version.js",
    "cli": "yarn workspace mainnet-js run cli",
    "coverage": "rm -rf ./node_modules/.cache && rm -rf coverage/ && rm -rf .nyc_output/ && NODE_ENV=test LOG_LEVEL=silent yarn run cover",
    "cover": "yarn run cover:core && yarn run cover:report",
    "cover:core": "nyc --silent yarn run test",
    "cover:browser": "nyc --silent --no-clean yarn run test:browser",
    "cover:api": "nyc --silent --no-clean yarn run test:api",
    "cover:report": "nyc report --reporter=lcov --reporter=text",
    "demo:build": "yarn workspace @mainnet-cash/demo run build",
    "demo:test": "yarn workspace @mainnet-cash/demo run test:unit",
    "demo:serve": "yarn workspace @mainnet-cash/demo run serve",
    "demo:report": "yarn workspace @mainnet-cash/demo run report",
    "demo:report:view": "npx reload --dir=packages/demo/public/",
    "docs": "npx typedoc",
    "test": "node --max-old-space-size=8000  --expose-gc --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --config jest.config.cjs --logHeapUsage  --forceExit",
    "test:skip": "SKIP_REGTEST_INIT=1 yarn test",
    "test:rest": "yarn workspace mainnet-cash run test",
    "test:rest:skip": "SKIP_REGTEST_INIT=1 yarn test:rest",
    "test:browser": "npx jest --config jest.config.browser.cjs --detectOpenHandles",
    "test:browser:skip": "SKIP_REGTEST_INIT=1 yarn test:browser",
    "regtest:up": "./jest/docker/start.sh",
    "regtest:down": "./jest/docker/stop.sh",
    "regtest:sbch:up": "./jest/docker/start-sbch-lite.sh",
    "regtest:sbch:down": "./jest/docker/stop-sbch-lite.sh",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "nuke": "rm -fr jest/playwright/* && rm -fr node_modules && yarn remove:packages && yarn remove:demo",
    "remove:packages": "rm -fr packages/*/node_modules && rm -fr packages/*/dist",
    "remove:demo": "rm -fr demo/*/node_modules && rm -fr demo/*/dist",
    "build": "yarn build:mainnet-js && yarn build:contract && yarn build:smartbch",
    "build:mainnet-js": "yarn workspace mainnet-js run build ",
    "build:contract": "yarn workspace @mainnet-cash/contract run build",
    "build:smartbch": "yarn workspace @mainnet-cash/smartbch run build",
    "link:mainnet-js": "yarn workspace mainnet-js link && yarn workspace @mainnet-cash/contract link mainnet-js && yarn workspace @mainnet-cash/smartbch link mainnet-js && yarn workspace mainnet-cash link mainnet-js",
    "link:contract": "yarn workspace @mainnet-cash/contract link && yarn workspace mainnet-cash link @mainnet-cash/contract",
    "link:smartbch": "yarn workspace @mainnet-cash/smartbch link && yarn workspace mainnet-cash link @mainnet-cash/smartbch",
    "link:all": "yarn link:mainnet-js && yarn link:contract && yarn link:smartbch",
    "postinstall": "patch-package && yarn link:all",
    "demo": "yarn workspace mainnet-demo start",
    "live": "npx reload --dir=jest/playwright ",
    "reload": "yarn live"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^18.11.9",
    "buffer": "^6.0.3",
    "circular-dependency-plugin": "^5.2.2",
    "inject-body-webpack-plugin": "^1.3.0",
    "jest": "^29.3.1",
    "jest-playwright-preset": "^2.0.0",
    "jest-process-manager": "^0.3.1",
    "jest-runner": "^29.3.1",
    "nyc": "^15.1.0",
    "playwright": "^1.27.1",
    "prettier": "^2.3.1",
    "reload": "^3.2.0",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "unzipper": "^0.10.11",
    "winston": "3.3.3"
  },
  "optionalDependencies": {
    "assert": "^2.0.0",
    "deepmerge": "^4.2.2",
    "dexie": "3.0.3",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.6",
    "eventsource": "^1.0.7",
    "html-webpack-plugin": "^5.3.2",
    "npm-dts-webpack-plugin": "^1.3.7",
    "parse-database-url": "^0.3.0",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.2.3",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-merge": "^5.8.0",
    "xmlhttprequest-ssl": "^2.0.0",
    "yarn": "^1.22.10"
  },
  "keywords": [
    "bch",
    "bitcoin cash"
  ],
  "author": "readcash",
  "dependencies": {}
}
